@model BookeNeest.Web.Models.ReviewViewModel

@{
}

<h2 class="custom-book-head"> Review Details</h2>

<hr/>
@if (Model != null)
{
    <div style="font-family: Georgia, serif">
        <div class="panel panel-primary panel-body row" style="background-color: aliceblue;">
            <div class="row">
                <div class="col-md-2 custom-book-fld "> Review ID: </div>
                <a href="Details?reviewId=@Model.Id" class="col-md-10"> @Model.Id </a>
            </div>

            <div class="row">
                <div class="col-md-2 custom-book-fld "> User ID: </div>
                <div class="col-md-10"> @Model.UserId </div>
            </div>

            <div class="row">
                <div class="col-md-2 custom-book-fld "> Book ID: </div>
                <a href="~/Book/Details?bookId=@Model.BookId" class="col-md-10"> @Model.BookId </a>
            </div>

            <div class="row">
                <div class="col-md-2 custom-book-fld "> Title: </div>
                <div class="col-md-10"> @Model.Title </div>
            </div>

            <div class="row">
                <div class="col-md-2 custom-book-fld "> Rating: </div>
                <div class="col-md-10"> @(Model.Rating ?? 0) </div>
            </div>

            <hr />

            <h3 class="row col-md-12 custom-book-head" style="font-size: ; text-align: center; white-space: normal">
                Review
            </h3>

            <div class="row col-md-12" style="font-size: larger; text-align: center; white-space: normal">
                @Model.Text
            </div>

        </div>


    </div>
}
else
{
    <h4>
        <div class="custom-book-head text-danger"> [Details] NULL found or bug? </div>
    </h4>
}