@using System.Text
@model IList<BookeNeest.Web.Models.ReviewViewModel>

@{
}

<h2 class="custom-book-head"> Recent Reviews</h2>

<hr/>
<p>
    <div class="panel-group ">
        @foreach (var review in Model)
        {
            <div class="panel panel-primary panel-body form-horizontal" style="background-color: aliceblue;">
            
                <div class="row">
                    <span class="custom-book-fld col-md-1">
                        Book ID:
                    </span> @review.BookId.ToString() <br />

                    <span class="custom-book-fld col-md-1">
                        User ID:
                    </span> @review.UserId.ToString() <br />


                    <span class="custom-book-fld col-md-1">
                        Title:
                    </span> @review.Title <br />

                    <span class="custom-book-fld col-md-1">
                        Review:
                    </span> @review.Text <br />
                </div>

            
            </div>

            <div class="panel  col-md-2">
                @Html.ActionLink("Details", "Details",
                    routeValues: new { reviewId = review.BookId.ToString() },
                    htmlAttributes: new {@class = "btn btn-default btn-primary form-control"})
            </div>
        }
    </div>

</p>
